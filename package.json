{
  "name": "abacus",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "clean": "lerna run clean --stream --parallel",
    "build": "lerna run build --stream",
    "build:lib": "lerna run build --scope=@abacus/components",
    "format": "npx prettier --write .",
    "lint": "eslint . -f codeframe",
    "pretest": "yarn typecheck && yarn lint",
    "prepare": "yarn run build:lib && lerna link",
    "test": "jest",
    "test:unit": "mocha \"{apps,packages}/**/test/**/*.spec.ts?(x)\"",
    "start": "lerna run start --stream --parallel",
    "start:frontend": "yarn workspace @abacus/frontend start",
    "start:backend": "yarn workspace @abacus/backend start",
    "start:docs": "yarn workspace @abacus/backend storybook",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@ts-tools/build": "^2.1.1",
    "@ts-tools/node": "^2.1.1",
    "@ts-tools/webpack-loader": "^2.1.1",
    "@types/compression": "^1.7.0",
    "@types/enzyme": "^3.10.7",
    "@types/enzyme-adapter-react-16": "^1.0.6",
    "@types/express": "^4.17.8",
    "@types/jest": "^26.0.14",
    "@types/node": "12",
    "@types/react": "^16.9.49",
    "@types/react-dom": "^16.9.8",
    "@typescript-eslint/eslint-plugin": "^4.1.1",
    "@typescript-eslint/parser": "^4.1.1",
    "css-loader": "^4.3.0",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.4",
    "enzyme-to-json": "^3.5.0",
    "eslint": "^7.9.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-no-only-tests": "^2.4.0",
    "eslint-plugin-react": "^7.20.6",
    "eslint-plugin-react-hooks": "^4.1.2",
    "file-loader": "^6.1.0",
    "html-webpack-plugin": "^4.4.1",
    "ignore-styles": "^5.0.1",
    "jest": "^26.4.2",
    "jsdom": "^16.4.0",
    "lerna": "^3.22.1",
    "mini-css-extract-plugin": "^0.11.2",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "rimraf": "^3.0.2",
    "strip-json-comments": "^3.1.1",
    "svg-inline-loader": "^0.8.2",
    "ts-jest": "^26.4.0",
    "ts-node-dev": "^1.0.0-pre.63",
    "tsconfig": "^7.0.0",
    "tsconfig-paths": "^3.9.0",
    "tsconfig-paths-webpack-plugin": "^3.3.0",
    "typescript": "^4.0.3",
    "webpack": "^4.44.1",
    "webpack-cli": "^3.3.12",
    "webpack-dev-server": "^3.11.0"
  },
  "prettier": {
    "printWidth": 120,
    "singleQuote": true
  },
  "private": true
}
